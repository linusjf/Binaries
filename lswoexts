#!/usr/bin/env bash
# shellcheck disable=SC2155,SC1090,SC1091 # Dynamically determined source path
#

set -euo pipefail
shopt -s inherit_errexit

readonly SCRIPT_NAME=$(basename "$0")
readonly SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
readonly EXIT_SUCCESS=0
readonly EXIT_FAILURE=1
readonly EXIT_USAGE=2
readonly REQUIRED_UTILS=("find")

debug=false # Flag for debug mode

#
#
#
function print_error() {
  printf "\033[0;31mError: %s\033[0m\n" "$1" >&2
}

#
#
#
function usage() {
  cat << EOF >&2
${SCRIPT_NAME} - List files in the current directory without extensions.

Usage: ${SCRIPT_NAME} [OPTIONS]

Lists files (not directories) in the current directory (.) that do not
contain a dot (.) in their name. Only lists files directly in the current
directory (maxdepth 1).

Options:
  -h, --help       Display this help message and exit.
      --debug      Enable debug mode (set -x).

Requires:
  - ${REQUIRED_UTILS[*]} command line tool.

Examples:
  ${SCRIPT_NAME}
  ${SCRIPT_NAME} --debug
EOF
  exit ${EXIT_USAGE}
}

#
#
#
function parse_arguments() {
  while [[ $# -gt 0 ]]; do
    case "$1" in
      -h | --help)
        usage
        ;;
      --debug)
        debug=true
        shift
        ;;
      -*)
        print_error "Invalid option: $1"
        usage
        ;;
      *)
        # No positional arguments expected
        print_error "Unknown argument: $1"
        usage
        ;;
    esac
    # This check prevents infinite loops if an unexpected argument is somehow
    # not handled by the cases above or if shift is missed.
    if [[ $# -gt 0 && "$1" == "${1-}" ]]; then # Check if $1 exists before shifting
      shift
    fi
  done
}

#
#
#
function main() {
  parse_arguments "$@"

  # Activate debug mode if requested
  if [[ "${debug}" == true ]]; then
    set -x
  fi

  # Source require.sh and check dependencies
  source "${SCRIPT_DIR}/require.sh"
  require_or_exit "${REQUIRED_UTILS[@]}"

  # Execute the find command
  if ! find . -maxdepth 1 -type f ! -name '*.*' -printf '%f\n'; then
    print_error "Failed to list files without extensions."
    exit ${EXIT_FAILURE}
  fi

  exit ${EXIT_SUCCESS}
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  # Wrap main execution in subshell to isolate 'set -x' if debug is enabled
  (main "$@")
fi
